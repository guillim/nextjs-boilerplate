// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String
  password  String
  updatedAt DateTime @default(now())
}

model Customer {
  id       String  @id @default(uuid())
  name     String
  email    String?
  imageUrl String?
}
